<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>

<fx:root type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
         title="OverBooked" minWidth="1200" minHeight="600" onCloseRequest="#handleExit">
  <icons>
    <Image url="@/images/address_book_32.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox>
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>

        <HBox VBox.vgrow="ALWAYS">
          <VBox HBox.hgrow="ALWAYS">
            <StackPane VBox.vgrow="NEVER" fx:id="commandBoxPlaceholder" styleClass="pane-with-border">
              <padding>
                <Insets top="5" right="10" bottom="5" left="10" />
              </padding>
            </StackPane>

            <StackPane VBox.vgrow="NEVER" fx:id="resultDisplayPlaceholder" styleClass="pane-with-border"
                       minHeight="100" prefHeight="100" maxHeight="100">
              <padding>
                <Insets top="5" right="10" bottom="5" left="10" />
              </padding>
            </StackPane>

            <!-- Main Portion Person and Event List display -->
            <HBox VBox.vgrow="ALWAYS" styleClass="pane-with-border">
              <!-- Person List -->
              <VBox fx:id="personList" styleClass="pane-with-border" minWidth="500" prefWidth="600" HBox.hgrow="ALWAYS">
                <padding>
                  <Insets top="10" right="10" bottom="10" left="10" />
                </padding>
                <Label text="Contacts" styleClass="list-header contacts-header" />
                <StackPane fx:id="personListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
              </VBox>

              <!-- Event List -->
              <VBox fx:id="eventList" styleClass="pane-with-border" minWidth="340" prefWidth="400" HBox.hgrow="SOMETIMES">
                <padding>
                  <Insets top="10" right="10" bottom="10" left="10" />
                </padding>
                <Label text="Events" styleClass="list-header events-header" />
                <StackPane fx:id="eventListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
              </VBox>
            </HBox>
          </VBox>

          <!-- Todo List -->
          <VBox fx:id="todoList" styleClass="todo-sidebar" minWidth="280" prefWidth="320" maxWidth="350">
            <padding>
              <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <Label text="To-Do List" styleClass="todo-header" />
            <StackPane fx:id="todoListPanelPlaceholder" VBox.vgrow="ALWAYS">
              <padding>
                <Insets top="5" right="0" bottom="0" left="0" />
              </padding>
            </StackPane>
          </VBox>
        </HBox>

        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
</fx:root>